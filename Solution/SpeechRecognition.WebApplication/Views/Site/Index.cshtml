@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Speech Recognition</h1>
    <p>A lightweight speech recognition web tool.</p>
</div>

<div class="text-left">
    <p>@ViewBag.Message</p>
    <p>
        <form id="frmSpeechRecognition" name="frmSpeechRecognition" action="" method="Get">
            <p>
                <label for="selCommand">Command:</label>
                <select id="selCommand" name="selCommand" onchange="changeCommand();" value="@ViewBag.Command">
                    <option value="hello">Hello</option>
                    <option value="red">Red</option>
                    <option value="green">Green</option>
                    <option value="blue">Blue</option>
                    <option value="exit">Exit</option>
                </select>
            </p>

            <p>
                <label for="selAction">Action:</label>
                <select id="selAction" name="selAction" onchange="changeAction();" value="@ViewBag.Action">
                    <option value="message">Message</option>
                    <option value="alert">Alert Box</option>
                </select>
            </p>
            <p>
                <div id="testArea" name="testArea">

                </div>
            </p>
            <p>
                <input type="submit" id="btnSubmit" name="btnSubmit" value="Recognize" />
                <input type="reset" id="btnReset" name="btnReset" value="Start Again" />
            </p>
        </form>
    </p>
    <p>
        @ViewBag.TestTranslation
    </p>
</div>