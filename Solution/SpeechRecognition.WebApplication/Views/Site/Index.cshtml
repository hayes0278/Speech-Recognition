@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.AppName</h1>
    <p>@ViewBag.AppTagLine</p>
</div>
<div id="mobileShim" name="mobileShim"></div>
<div class="text-left">
    <p>@ViewBag.Message</p>
    <p>Valid Commands: "hello", "red", "green", "blue", "exit"</p>
    <p>
        <form id="frmSpeechRecognition" name="frmSpeechRecognition" action="" method="Get">
            <p>
                <label for="selCommand">Command:</label>
                <select id="selCommand" name="selCommand" onchange="changeCommand(this.value);" value="@ViewBag.Command">
                    <option value="hello">Hello</option>
                    <option value="red">Red</option>
                    <option value="notreal">Not Real A</option>
                    <option value="green">Green</option>
                    <option value="blue">Blue</option>
                    <option value="notreal">Not Real B</option>
                    <option value="exit">Exit</option>
                </select>
            </p>
            <p>
                <div id="testArea" name="testArea" rows="5" cols="50">
                    @ViewBag.Result
                </div>
            </p>
            <p>
                <input type="submit" id="btnSubmit" name="btnSubmit" value="Recognize" />
                <input type="reset" id="btnReset" name="btnReset" onclick="replaceCurrentPage('/');" value="Start Again" />
            </p>
        </form>
    </p>
</div>